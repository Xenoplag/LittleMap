<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <!-- 使用高德地图的提供的MapView -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="输入目的地进行查找"
            android:layout_alignParentTop="true"
            android:background="#77ffffff"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/search3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/personal"
            android:background="@drawable/personal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />
        <ToggleButton
            android:id="@+id/tb"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/map"
            android:layout_gravity="top|right"
            android:layout_alignParentRight="true"
            android:layout_below="@id/dest"/>

        <Button
            android:id="@+id/loca"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/timg"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/walk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/loca"
            android:layout_alignParentLeft="true"
            android:background="@drawable/lwalk"
            />

        <Button
            android:id="@+id/car"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@id/walk"
            android:layout_alignParentLeft="true"
            android:background="@drawable/car2"
            />
        <Button
            android:id="@+id/route"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/loca"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/route"
            />

    </RelativeLayout>

</LinearLayout>

